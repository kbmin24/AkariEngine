<form action='/protect/<%= title %>' class='p-3' method='POST'>
    <% ['read', 'edit', 'move'].forEach((item, i, arr) => { %>
        <div class='form-group mb-2 row'>
            <label for='<%= item %>Select' class='col-sm-2 col-form-label'><%= item%></label>
            <select class='w-auto form-select' id='<%= item %>Select' name='<%= item %>'aria-label='Protections for <%= item %>' <% if (locals.hasACL === false) { %> disabled <% } %>>
                <option value='everyone'>Everyone (Except blocked users)</option>
                <option value='blocked' <% if (item == 'read') { %> selected <% } %>>Everyone (Including blocked users)</option>
                <option value='login'>Logged in users only</option>
                <option value='admin'>Admins only</option>
            </select>
        </div>
    <% }) %>
    <% if (locals.hasACL === true) { %>
        <button type='submit' class='btn btn-primary'>Save</button>
    <% } %>
</form>
<div style='display:none' id='perms'>
<%= perms %>
</div>
<script src='/js/protect.js'></script>



