<form action='/admin/grant' method='POST'>
    <input type='hidden' id='grantTo' name='grantTo' value='<%= grantTo %>'>
    <% global.perms.forEach(i => { %>
    <div class='form-check form-check-inline'>
        <input class='form-check-input' type='checkbox' id='cb<%= i %>' name='<%= i %>' value='<%= i %>'>
        <label class='form-check-label' for='cb<%= i %>'><%= i %></label>
    </div>
    <% }) %>
    <div class='mt-3'>
        <button type='submit' class='btn btn-primary'>Save</button>
    </div>
</form>
<div style='display:none' id='perms'>
<%= perms %>
</div>
<script src='/js/grant.js' ></script>