<div style='float:right'>
    <a class='btn btn-primary' href='/RecentDiscuss?isopen=true' role='button'>열린 토론</a>
    <a class='btn btn-secondary' href='/RecentDiscuss?isopen=false' role='button'>닫힌 토론</a>
</div>
<div style='clear:both'></div>
<div style='overflow-x: auto'>
    <table class="table">
        <thead>
            <tr>
                <th scope='col'>토론명</th>
                <th scope='col'>문서명</th>
                <th scope='col'>일시</th>
            </tr>
        </thead>
        <tbody>
            <% changes.forEach(c => { %>
            <tr>
                <td><a href='/thread/<%= c.threadID %>'><%= c.threadname %></a></td>
                <td><a href='/w/<%= c.pagename %>'><%= c.pagename %></a></td>
                <td><%= date.format(c.createdAt, global.dtFormat) %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>