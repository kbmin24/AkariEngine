<div class='p-3' style='max-width: 500px'>
    <form action='/login' method='POST'>
        <input type='hidden' name='_csrf' value='<%= csrfToken %>'>
        <div class='form-group mb-2'>
            <label for='idInputbox'>ID</label>
            <input type='text' name='id' class='form-control' id='idInputbox'placeholder='Enter ID' required>
        </div>
        <div class='form-group mb-2'>
            <label for='passwordInputbox'>Password</label>
            <input type='password' name='password' class='form-control' id='passwordInputbox'placeholder='Enter Password' required>
        </div>
        <div class='mb-2'>Do not have an account? <a href='/signup'>Create one!</a></div>
        <button type='submit' class='btn btn-primary'>Login</button>
    </form>
</div>