<link rel='stylesheet' href='/css/edit.css'>
<script src='/js/editpreview.js'></script>
<form action='/edit/<%= title %>' method='POST' class='editForm'>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class='form-group'>
        <textarea class='form-control' id='editAreaBox' name='content'<% if (locals.disabled) { %> disabled <% } %>><%= content %></textarea>
    </div>
    <% if (!locals.disabled) { %>
    <div class="form-group mt-2 mb-2 row">
        <label for='comment' class='col-sm-2 col-form-label'>Comment</label>
        <div class="col-sm-10">
            <input class="form-control" id='comment' maxlength=255 name='comment' type="text" placeholder="Max 255 characters">
        </div>
    </div>
    <div class='mt-2 mb-2'>
        <%- captcha %>
        <div class='row'>
            <label for='captchaIn' class='col-form-label col-sm-2'>CAPTCHA</b></label>
            <div class='col-sm-10'>
                <input class="form-control" maxlength=5 id='captchaIn' name='captcha' type="text" style='width:100px' autocomplete='off'>
            </div>
        </div>
        <small class='form-text text-muted'>For spam protection, please type <b>four</b> characters shown above.</small>
    </div>
    <% if (locals.username === undefined) { %>
    <p><span class='text-danger fw-bold'>WARNING!</span>    You are NOT logged in. Your IP address will be PERMANENTLY logged and will be visible to everyone. (비로그인 상태로 당신의 IP 주소가 영구히 기록되어 공개될 것입니다.)</p>
    <% } %>
    <p><span class='text-danger fw-bold'>WARNING!</span>    <%= global.copyrightNotice %></p>
    <button type='submit' type='button' class='btn btn-primary mt-3'>Save</button>
    <button type='button' class='btn btn-secondary mt-3' onclick='previewButtonClick()'>Preview</button>
    <% } %>
</form>
<form action='/preview/' method='POST' target='_blank' id='previewForm' style='display:none'>
    <input type='hidden' name='title' value='<%= title %>'>
    <input type='hidden' id='previewContent' name='content'>
</form>