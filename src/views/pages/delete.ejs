<form action='/delete/<%= title %>' method='POST' class='editForm'>
    <input type='hidden' name='_csrf' value='<%= csrfToken %>'>
    <div class="form-group mt-2 mb-2 row">
        <label for='comment' class='col-sm-2 col-form-label'><%= l('summary') %></label>
        <div class="col-sm-10">
            <input class="form-control" id='comment' maxlength=255 name='comment' type="text" placeholder="<%= global.i18n.__('edit_max255') %>">
        </div>
    </div>
    <div class="form-group mt-2 mb-2 row">
    </div>
    <button type='submit' type='button' class='btn btn-primary mt-3'><%= l('delete') %></button>
</form>